/* pages/weather/weather.wxss */
.loading{
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  background: #c00;
  z-index: 999;
}
.day{
  background: url('http://119.36.240.34:18090/images/day.jpg') no-repeat;
  background-size: 100% 100%;
}
.night{
  background: url('http://119.36.240.34:18090/images/night.jpg') no-repeat;
  background-size: 100% 100%;
}
.city {
  text-align: center;
  font-size: 40rpx;
  color: #fff;
}
.city image{
  width: 20rpx;
  height: 20rpx;
  margin-left: 16rpx;
}
.location {
  text-align: center;
  font-size: 24rpx;
}
.star image{
  width: 50rpx;
  height: 50rpx;
  margin-top: 30rpx;
  margin-left: 48rpx;
}
.thisTmp {
  font-size: 178rpx;
  text-align: center;
  position: relative;
  color: #fff;
}
.thisTmp .cond_txt{
  font-size: 50rpx;
  margin-left: -20rpx;
}
.cond_code {
  width: 100rpx;
  height: 100rpx;
  position: absolute;
  bottom: 30rpx;
  right: 220rpx;
}

.time {
  text-align: center;
  font-size: 24rpx;
  margin: 22rpx 0;
  color: #fff;
}
.weatherNum{
  color: #fff;
  font-size: 40rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  margin-bottom: 78rpx;
}
.weatherNum>view{
  text-align: center;
  border-right: 1rpx solid #fff;
  padding:0 24rpx;
}
.weatherNum>view:nth-child(3){
  border-right: none;
}
.weatherNumTxt {
  font-size: 26rpx;
}
.hum {
  width: 50rpx;
  height: 50rpx;
}
.historyLink{
  font-size: 32rpx;
  color: #fff;
  margin-bottom: 220rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.historyLink image{
  width: 40rpx;
  height: 40rpx;
  margin-right: 26rpx;
}
.moreDiv{
  color: #333;
}
.moreDiv>view{
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  font-size: 36rpx;
}
.moreDiv .time{
  margin-right: 120rpx;
  font-size: 36rpx;
   color: #333;
}
.moreDiv .cond{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}
.moreDiv .tem{
  display: flex;
  flex-direction: row;
  width: 200rpx;
}
.moreDiv .tem view{
  margin-right: 30rpx;
}