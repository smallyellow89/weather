<!--pages/city/city.wxml-->
<view class='main'>
  <view class="section">
    <image src="/images/search.png"></image>
    <input bindinput="bindKeyInput" placeholder="请输入城市名" />
  </view>
</view>
<view class='HotDiv' wx:if="{{sts}}">
  <view class='hot'>
    <view class='dot'></view>
    <text class='title'>热门城市</text>
  </view>
  <view class='hotList'>
    <view wx:for="{{hotList}}" wx:key="index" bindtap='selectCity' data-lat="{{item.lat}}" data-lon="{{item.lon}}">
      {{item.location}}
    </view>
  </view>
</view>
<view class='searchDiv'>
  <view class='hot'>
    <view class='dot'></view>
    <text class='title'>搜索结果</text>
  </view>
  <view class='searchList'>
    <view wx:for="{{searchList}}" wx:key="index" bindtap='selectCity' data-lat="{{item.lat}}" data-lon="{{item.lon}}">
      {{item.cnty}}-{{item.admin_area}}-{{item.location}}
    </view>
  </view>
</view>